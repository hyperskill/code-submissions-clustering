<idea-plugin>
    <id>org.jetbrains.research.code.submissions.clustering</id>
    <name>Code Submissions Clustering</name>
    <vendor url="https://research.jetbrains.org/">JetBrains Research</vendor>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.python</depends>

    <description><![CDATA[
    Code submissions clustering plugin for Hyperskill platform.
    ]]></description>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <appStarter implementation="org.jetbrains.research.code.submissions.clustering.server.CodeServerStarter"/>
    </extensions>
</idea-plugin>
